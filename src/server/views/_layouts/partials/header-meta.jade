block header-meta
  - var siteUrl = 'http://ncaa.n8io.com';
  - var title = 'March Madness ' + (new Date()).getFullYear();
  - var imageUrl = 'https://dl.dropboxusercontent.com/u/452959/hosted/march-madness.jpg';
  - var desc = 'Get your picks in. Come and join our pool.';
  
  meta(charset='utf-8')
  meta(http-equiv='X-UA-Compatible',content='IE=edge')
  meta(name='viewport', content='width=device-width, initial-scale=1')
  meta(name='author', content='n8io')
  meta(description='Get your picks in. Come and join our pool.')
  
  script(type='application/ld+json').
    {
      "@context": "http://schema.org",
      "@type": "Event",
      "name": "#{title}",
      "description": "#{desc}",
      "image": "#{imageUrl}"
      "startDate" : "2016-03-18T12:05:00-05:00",
      "url" : "#{siteUrl}",
      "location" : {
        "@type" : "Place",
        "sameAs" : "http://espn.go.com",
        "name" : "#{title}",
        "address" : "Norton, OH 44203"
      }
    }
  
  meta(property='og:title', content='#{title}')
  meta(property='og:site_name', content='#{title}')
  meta(property='og:description', content='#{desc}')
  meta(property='og:url', content='#{siteUrl}')
  meta(property='og:type', content='website')
  meta(property='og:image', content='#{imageUrl}')
    
