  //- *** END Header service items

  //- Setup any globals for the app
  script.
    window.__env = '#{ isDevelopment?"dev":process.env.NODE_ENV }';
    window.__langs = !{ JSON.stringify(config.get('i18n:supportedLanguages') || []) };
    window.__lang = "#{ i18n.lng() }";
    window._.str = s; //setting up underscore.string

  //- Setup i18n translations
  script(src="/i18next/i18next.js", data-id='js-i18n')

  //- Angular app bundle
  script(src='#{CDN("/js/angular/ng.min.js")}', data-id='js-app')

  //- Scripts loaded, now show body of page
  script.
    $('body').removeAttr('unresolved');

  //- Add livereload to help in local development only
  if (config.get('NODE_ENV')||'').toLowerCase().indexOf('dev') === 0
    script(src='//localhost:35729/livereload.js', async, data-id='js-livereload')