  script(src='#{CDN("/statics/bower_components/modernizr/modernizr.js")}', data-id='js-modernizr')
  script(src='#{CDN("/statics/bower_components/moment/min/moment.min.js")}', data-id='js-moment')
  script(src='#{CDN("/statics/bower_components/underscore.string/dist/underscore.string.min.js")}', data-id='js-underscore.string')

  script(src='#{CDN("/statics/bower_components/angular/angular.min.js")}', data-id='js-angular')
  script(src='#{CDN("/statics/bower_components/angular-animate/angular-animate.min.js")}', data-id='js-angular-animate')
